<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
 
<!-- Checkstyle configuration -->
<module name="Checker">
    <property name="charset" value="UTF-8"/>
 
    <!-- Ensure there are no tab characters in source files -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>
 
    <!-- Enforce consistent import order -->
    <module name="ImportOrder"/>
 
    <!-- Ensure there is a newline at the end of each file -->
    <module name="NewlineAtEndOfFile"/>
 
    <!-- Check for whitespace issues (e.g., unnecessary spaces, trailing spaces) -->
    <module name="NoWhitespaceBefore"/>
    <module name="NoWhitespaceAfter"/>
    <module name="NoTrailingWhitespace"/>
 
    <!-- Check for file header comments (customize as needed) -->
    <module name="FileHeader">
        <property name="headerFile" value="LICENSE.txt"/>
        <property name="fileTypes" value="java"/>
    </module>
 
    <!-- Additional checks can be added or removed based on your project's requirements -->
</module>
